= form_for @connection do |f|
  - if @connection.errors.any?
    #error_explanation
      %h2= "#{pluralize(@connection.errors.count, "error")} prohibited this connection from being saved:"
      %ul
        - @connection.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user1_id
    = f.text_field :user1_id
  .field
    = f.label :user2_int
    = f.text_field :user2_int
  .field
    = f.label :conference_id
    = f.text_field :conference_id
  .actions
    = f.submit 'Save'
