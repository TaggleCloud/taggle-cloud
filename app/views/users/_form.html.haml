= form_for @user do |f|
  - if @interests.errors.any?
    #error_explanation
      %h2= "#{pluralize(@abstract.errors.count, "error")} prohibited this interest from being saved:"
      %ul
        - @abstract.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :occupation
    = f.text_field :occupation
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :location
    = f.text_field :location
  = f.fields_for @interests do |i|
    .field
      = i.label :interests
      = i.text_area :body
  .actions
    = f.submit