= form_for @user do |f|
  - if @abstract.errors.any?
    #error_explanation
      %h2= "#{pluralize(@abstract.errors.count, "error")} prohibited this interest from being saved:"
      %ul
        - @abstract.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :occupation
    = f.text_field :occupation
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :location
    = f.text_field :location
  = f.fields_for @abstract do |a|
    .field
      = a.label :bio
      = a.text_area :body
  .actions
    = f.submit
