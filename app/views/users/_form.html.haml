= form_for @user do |f|
  - if @abstract.errors.any?
    #error_explanation
      %h2= "#{pluralize(@abstract.errors.count, "error")} prohibited this conference from being saved:"
      %ul
        - @abstract.errors.full_messages.each do |msg|
          %li= msg

  -f.fields_for "abstract_attributes[]", Abstract.new do |t|
    = t.label :body
    = t.text_area :body
  .actions
    = f.submit 