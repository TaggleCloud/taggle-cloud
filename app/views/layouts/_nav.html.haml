.navbar.navbar-static-top.navbar-inverse
  .navbar-inner
    %ul.nav
      %li.title_link=link_to "TaggleCloud", :root
      %li
        - if current_user
          = link_to "Conferences", conferences_path
    %ul.nav.pull-right
      - if current_user
        %li.dropdown
          = link_to "#", :class => "dropdown-toggle", data: { toggle: 'dropdown' } do
            ="Welcome #{current_user.name}"
            %b.caret
          %ul.dropdown-menu{:role => "menu", :aria_labelledby => "dLabel"}
            %li= link_to "My Profile", profile_path
            %li= link_to "Sign Out", signout_path
      - else
        %li= link_to "Sign In", signin_path
