.page-header
  %h1 Requests

.request-list
  - @requests.each do |r|
    - if r.inviter
      - if r.accepted.nil?
        - u = User.find(r.inviter)
        -if u.image
          = image_tag(u.image, :class => 'pull-left', :width => 100, :height => 100)
        -else
          = image_tag("user_placeholder.png", :class => 'pull-left', :width => 100, :height => 100)
        .pull-left
          = link_to u.name, user_path(r.inviter)
          %br
          = r.body
        .pull-left
          = link_to accept_request_path(u), :method => 'post', :class => "btn" do
            %i.icon-ok
            Accept

          = link_to edit_request_path(r), :class => "btn" do
            %i.icon-edit
            Reply
         
          = link_to ignore_request_path(u), :method => 'post', :class => "btn" do
            %i.icon-eye-close
            Ignore
  
        .clearfix
        %hr
        
.accepted
  - @requests.each do |r|
    - if r.inviter
      - if r.accepted
        - u = User.find(r.inviter)
        -if u.image
          = image_tag(u.image, :class => 'pull-left', :width => 100, :height => 100)
        -else
          = image_tag("user_placeholder.png", :class => 'pull-left', :width => 100, :height => 100)
        .pull-left
          = link_to u.name, user_path(r.inviter)
          %br
          = r.body
        .pull-left
       
          = link_to ignore_request_path(u), :method => 'post', :class => "btn" do
            %i.icon-eye-close
            Ignore

        .clearfix
        %hr

.ignored
  - @requests.each do |r|
    - if r.inviter
      - if r.accepted == false
        - u = User.find(r.inviter)
        -if u.image
          = image_tag(u.image, :class => 'pull-left', :width => 100, :height => 100)
        -else
          = image_tag("user_placeholder.png", :class => 'pull-left', :width => 100, :height => 100)
        .pull-left
          = link_to u.name, user_path(r.inviter)
          %br
          = r.body
        .pull-left
          = link_to accept_request_path(u), :method => 'post', :class => "btn" do
            %i.icon-ok
            Accept
        
        .clearfix
        %hr
