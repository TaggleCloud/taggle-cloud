= form_for @request, :url => {:action => 'create', :controller => 'requests', :attendance_id => @attendance.id} do |f|
  - if @request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@request.errors.count, "error")} prohibited this request from being sent:"
      %ul
        - @request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area(:body, :size => '50x10')
  .actions
    = f.submit 'Send Request'
