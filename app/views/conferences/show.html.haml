%p#notice= notice

%h1= @conference.name
%h3= @conference.location

%h2 Attendees
%hr
%ul.row.attendees
  - @attendees.each do |attendee|
    %li.three.columns
      - if attendee.user_id?
        = link_to "User Name", user_path(attendee.user_id)
      = attendee.registered_email

= link_to 'Edit', edit_conference_path(@conference)
\|
= link_to 'Back', conferences_path
