.page-header
  %p.pull-right
    = link_to 'Edit', edit_conference_path(@conference)
    \|
    = link_to 'Back', conferences_path
  %h1
    = @conference.name
    %small= @conference.location
  
%p.lead
  = "Your Matches"
  \/
  = link_to "Attendees", conference_attendees_path(@conference)
  
%ul.thumbnails
  - @attendees.each do |attendee|
    %li.span6
      .thumbnail
        .card
          - if attendee.user_id?
            %h4= link_to attendee.name, user_path(attendee.user_id)
          - else
            %h4= attendee.name
          - unless attendee.organization
            %h5 No Organization Specified
          - else
            %h5= attendee.organization
          .progress.progress-striped
            .bar{:style => "width: 75%"}