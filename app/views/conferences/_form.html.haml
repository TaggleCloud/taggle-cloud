= form_for @conference do |f|
  - if @conference.errors.any?
    #error_explanation
      %h2= "#{pluralize(@conference.errors.count, "error")} prohibited this conference from being saved:"
      %ul
        - @conference.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :location
    = f.text_field :location
  - if f.object.new_record?
    .file_field
      = f.label :"Attendee list (csv file)"
      = f.file_field :csv
  -f.fields_for :attendances do |t|
    .field
      = t.label :registered_email
      = t.text_field :registered_email
    .field
      = t.label :first_name
      = t.text_field :first_name
    .field
      = t.label :last_name
      = t.text_field :last_name
    .field
      = t.label :organization
      = t.text_field :organization
  .actions
    = f.submit