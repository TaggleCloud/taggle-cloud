= form_for @conference do |f|
  - if @conference.errors.any?
    #error_explanation
      %h2= "#{pluralize(@conference.errors.count, "error")} prohibited this conference from being saved:"
      %ul
        - @conference.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :location
    = f.text_field :location
  .field
    .datepicker
      = f.label :start_date
      = f.date_select :start_time
  .field
    .datepicker
      = f.label :end_date
      = f.date_select :end_time
  = if f.object.new_record?
    .file_field
      = f.label :"Attendee list (csv file)"
      = f.file_field :csv
  = link_to_add_fields "Add attendee", f, :attendances
  .actions
    = f.submit
  
:javascript
  $(function() {
  	$('.datepicker').datepicker()
  })
